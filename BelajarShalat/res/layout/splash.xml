<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belajar Shalat"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:typeface="monospace"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"/>
        <ProgressBar 
            android:id="@+id/progres"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"/>
        
        <TextView
            android:id="@+id/textAbout" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progres"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/biru"
            android:text="Oleh : Mohammad Zainuri\nAplikasi ini dibuat sebagai salah satu media pembelajaran tuntunan sholat"
            android:gravity="center"/>
        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/sholat2"
            android:layout_below="@+id/textAbout"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:scaleType="fitEnd"/>
    </RelativeLayout>

</LinearLayout>