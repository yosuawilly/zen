<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/list_menu_vertical_margin"
        android:layout_marginLeft="@dimen/list_menu_horizontal_margin"
        android:layout_marginRight="@dimen/list_menu_horizontal_margin"
        android:layout_marginTop="@dimen/list_menu_vertical_margin"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >
        
        <TextView 
            android:id="@+id/txtNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:textColor="#330000"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/menuTextTop"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Nama"
                android:textColor="#C80000" />

            <TextView
                android:id="@+id/menuTextBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000000000"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/list_menu_vertical_margin"
        android:layout_marginLeft="@dimen/list_menu_horizontal_margin"
        android:layout_marginRight="@dimen/list_menu_horizontal_margin"
        android:layout_marginTop="@dimen/list_menu_vertical_margin"
        android:gravity="right|center_vertical"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/menuTextRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Rp. 0"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/nextIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/list_next_icon"
            android:orientation="vertical"
            android:visibility="visible" >

        </LinearLayout>

    </LinearLayout>

</LinearLayout>